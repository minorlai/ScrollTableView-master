<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loopeer.android.librarys.horizontalverticalscrollview">
    <!--声明必要的权限（写入和读取数据）-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OtherActivity" />
        <activity android:name=".CircularActivity" />
        <activity android:name=".XRecyclerViewActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".ActionBarAct" />
        <activity android:name=".GridViewActivity" />
        <activity android:name=".BuyActivity" />
        <activity android:name=".ui.PriceOrderActivity" />
        <activity
            android:name=".dialog.DialogPriceActivity"
            android:theme="@style/MyDialogStyle" />
    </application>

</manifest>
